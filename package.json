{
  "name": "OTHLauncher",
  "productName": "OTHLauncher",
  "version": "1.0.1",
  "description": "OTH Desktop Client - Professional Software & Hosting Solutions",
  "main": "src/main/main.js",
  "author": {
    "name": "OTH",
    "email": "contact@overtimehosting.com"
  },
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --inspect",
    "build": "electron-builder --publish never",
    "build:publish": "electron-builder --win --publish always",
    "build:win": "electron-builder --win --publish never",
    "build:mac": "electron-builder --mac --publish never",
    "build:linux": "electron-builder --linux --publish never",
    "build:all": "electron-builder -mwl --publish never",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "release": "electron-builder --win --publish always"
  },
  "dependencies": {
    "adm-zip": "^0.5.10",
    "discord-rpc": "^4.0.1",
    "electron-log": "^5.4.3",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.6.2",
    "mime-types": "^2.1.35"
  },
  "devDependencies": {
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.oth.launcher",
    "productName": "OTHLauncher",
    "copyright": "Copyright Â© 2025 OTH",
    "directories": {
      "output": "dist",
      "buildResources": "."
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "modules/**/*",
      "build/**/*",
      "LICENSE"
    ],
    "extraResources": [
      {
        "from": "assets",
        "to": "assets"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/company.ico",
      "requestedExecutionLevel": "asInvoker",
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "OTHLauncher",
      "installerIcon": "assets/company.ico",
      "uninstallerIcon": "assets/company.ico",
      "runAfterFinish": true,
      "deleteAppDataOnUninstall": true,
      "warningsAsErrors": false
    },
    "portable": {
      "artifactName": "${productName}-${version}-portable.${ext}"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "assets/company.png",
      "category": "public.app-category.utilities",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "dmg": {
      "background": "assets/company.gif",
      "icon": "assets/company.png",
      "iconSize": 100,
      "contents": [
        {
          "x": 380,
          "y": 280,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 110,
          "y": 280,
          "type": "file"
        }
      ],
      "window": {
        "width": 540,
        "height": 380
      }
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "rpm",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/company.png",
      "category": "Utility",
      "synopsis": "OTH Desktop Client",
      "description": "Professional software and hosting solutions desktop client",
      "maintainer": "OTH <contact@overtimehosting.com>"
    },
    "appImage": {
      "artifactName": "${productName}-${version}.${ext}"
    },
    "deb": {
      "depends": [
        "gconf2",
        "gconf-service",
        "libnotify4",
        "libappindicator1",
        "libxtst6",
        "libnss3"
      ]
    },
    "publish": [
      {
        "provider": "github",
        "owner": "OverTimeHosting",
        "repo": "Electron-OTHLauncher",
        "private": true,
        "releaseType": "release"
      }
    ]
  }
}

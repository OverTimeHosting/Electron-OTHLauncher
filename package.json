{
  "name": "OTHLauncher",
  "productName": "OTHLauncher",
  "version": "1.0.0",
  "description": "OTH Desktop Client - Professional Software & Hosting Solutions",
  "main": "main.js",
  "author": {
    "name": "OTH",
    "email": "contact@overtimehosting.com"
  },
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --inspect",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "build:all": "electron-builder -mwl",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "dependencies": {
    "discord-rpc": "^4.0.1",
    "electron-store": "^8.1.0"
  },
  "devDependencies": {
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.oth.launcher",
    "productName": "OTHLauncher",
    "copyright": "Copyright Â© 2025 OTH",
    "directories": {
      "output": "dist",
      "buildResources": "."
    },
    "files": [
      "main.js",
      "preload.js",
      "launcher.html",
      "company.png",
      "company.ico",
      "company.gif",
      "icon.svg",
      "discord/**/*"
    ],
    "extraResources": [
      {
        "from": "company.png",
        "to": "company.png"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "company.ico",
      "requestedExecutionLevel": "asInvoker",
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "OTHLauncher",
      "installerIcon": "company.ico",
      "uninstallerIcon": "company.ico",
      "installerHeaderIcon": "company.ico",
      "installerSidebar": "company.gif",
      "uninstallerSidebar": "company.gif",
      "license": "../LICENSE",
      "warningsAsErrors": false,
      "perMachine": false,
      "allowElevation": true,
      "runAfterFinish": true,
      "menuCategory": true,
      "deleteAppDataOnUninstall": true
    },
    "portable": {
      "artifactName": "${productName}-${version}-portable.${ext}"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "zip",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "company.png",
      "category": "public.app-category.utilities",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "entitlements.mac.plist",
      "entitlementsInherit": "entitlements.mac.plist"
    },
    "dmg": {
      "background": "company.gif",
      "icon": "company.png",
      "iconSize": 100,
      "contents": [
        {
          "x": 380,
          "y": 280,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 110,
          "y": 280,
          "type": "file"
        }
      ],
      "window": {
        "width": 540,
        "height": 380
      }
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        },
        {
          "target": "rpm",
          "arch": ["x64"]
        }
      ],
      "icon": "company.png",
      "category": "Utility",
      "synopsis": "OTH Desktop Client",
      "description": "Professional software and hosting solutions desktop client",
      "maintainer": "OTH <contact@overtimehosting.com>"
    },
    "appImage": {
      "artifactName": "${productName}-${version}.${ext}"
    },
    "deb": {
      "depends": [
        "gconf2",
        "gconf-service",
        "libnotify4",
        "libappindicator1",
        "libxtst6",
        "libnss3"
      ]
    },
    "publish": null
  }
}
